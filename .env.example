# Database Configuration
DATABASE_URL=postgresql://acoustic:acoustic123@localhost:5432/acoustic

# JWT Secrets (Generate secure random strings for production)
# You can generate secrets using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_ACCESS_SECRET=change_me_to_secure_random_string
JWT_REFRESH_SECRET=change_me_to_secure_random_string

# Node Environment
NODE_ENV=development

# Frontend URLs
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Admin Panel API URL
VITE_API_URL=http://localhost:3001/api

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3002

# Backend Port
PORT=3001

# Telegram Bot (Optional - for form notifications)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Storage Configuration
STORAGE_DRIVER=local

# S3 Configuration (Optional - if using S3 storage)
# S3_REGION=
# S3_BUCKET=
# S3_ACCESS_KEY_ID=
# S3_SECRET_ACCESS_KEY=

# PostgreSQL Configuration (for Docker Compose)
POSTGRES_USER=acoustic
POSTGRES_PASSWORD=acoustic123
POSTGRES_DB=acoustic
