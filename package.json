{
  "name": "acoustic-uz",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "db:studio": "turbo run db:studio",
    "dev:db": "docker-compose up -d postgres",
    "dev:migrate": "pnpm --filter @acoustic/backend exec prisma migrate deploy --schema=../../prisma/schema.prisma",
    "dev:seed": "pnpm --filter @acoustic/backend db:seed",
    "dev:reset": "pnpm exec prisma migrate reset --schema=prisma/schema.prisma",
    "dev:stack": "pnpm run dev:db && pnpm run dev:migrate && pnpm --filter @acoustic/backend build && pnpm --filter @acoustic/backend dev",
    "restart:backend": "pkill -f 'nest start' 2>/dev/null; pkill -f '@acoustic/backend' 2>/dev/null; sleep 2; pnpm --filter @acoustic/backend dev"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.12",
    "prettier": "^3.1.0",
    "prisma": "5.22.0",
    "turbo": "^1.10.12",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@prisma/client": "5.22.0"
  }
}
