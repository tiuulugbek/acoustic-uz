{
  "name": "acoustic-uz",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "db:studio": "turbo run db:studio",
    "dev:db": "docker-compose up -d postgres",
    "dev:migrate": "pnpm --filter @acoustic/backend exec prisma migrate deploy --schema=../../prisma/schema.prisma",
    "dev:seed": "pnpm --filter @acoustic/backend db:seed",
    "import:products": "pnpm --filter @acoustic/backend exec ts-node --transpile-only --project tsconfig.json ../../scripts/import-products.ts",
    "fix:unknown-products": "pnpm --filter @acoustic/backend exec ts-node --transpile-only --project tsconfig.json ../../scripts/fix-unknown-products.ts",
    "fix:interacoustics-type": "pnpm --filter @acoustic/backend exec ts-node --transpile-only --project tsconfig.json ../../scripts/fix-interacoustics-product-type.ts",
    "fix:localhost-urls": "pnpm --filter @acoustic/backend exec ts-node --transpile-only --project tsconfig.json ../../scripts/fix-localhost-urls.ts",
    "update:translations": "pnpm --filter @acoustic/backend exec ts-node --transpile-only --project tsconfig.json ../../scripts/update_products_translations.ts",
    "translate:uzbek": "pnpm --filter @acoustic/backend exec ts-node --transpile-only --project tsconfig.json ../../scripts/translate_uzbek_descriptions.ts",
    "clean:reimport": "pnpm --filter @acoustic/backend exec ts-node --transpile-only --project tsconfig.json ../../scripts/clean_and_reimport_products.ts",
    "clean:products": "pnpm --filter @acoustic/backend exec ts-node --transpile-only --project tsconfig.json ../../scripts/clean_products.ts",
    "clean:all": "pnpm --filter @acoustic/backend exec ts-node --transpile-only --project tsconfig.json ../../scripts/clean_all_products.ts",
    "import:products:full": "pnpm --filter @acoustic/backend exec ts-node --transpile-only --project tsconfig.json ../../scripts/import_products_full.ts",
    "import:products:with-images": "pnpm --filter @acoustic/backend exec ts-node --transpile-only --project tsconfig.json ../../scripts/import_products_with_images.ts",
    "generate:branch-slugs": "pnpm --filter @acoustic/backend exec ts-node --transpile-only --project tsconfig.json ../../scripts/generate_branch_slugs.ts",
    "convert:images:webp": "pnpm --filter @acoustic/backend exec ts-node --transpile-only --project tsconfig.json ../../scripts/convert-images-to-webp.ts",
    "reset:password": "pnpm --filter @acoustic/backend exec ts-node --transpile-only --project tsconfig.json ../../scripts/reset-password.ts",
    "dev:reset": "pnpm exec prisma migrate reset --schema=prisma/schema.prisma",
    "dev:stack": "pnpm run dev:db && pnpm run dev:migrate && pnpm --filter @acoustic/backend build && pnpm --filter @acoustic/backend dev",
    "restart:backend": "pkill -f 'nest start' 2>/dev/null; pkill -f '@acoustic/backend' 2>/dev/null; sleep 2; pnpm --filter @acoustic/backend dev"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.12",
    "prettier": "^3.1.0",
    "prisma": "5.22.0",
    "turbo": "^1.10.12",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@prisma/client": "5.22.0"
  }
}
