# Database
DATABASE_URL=postgresql://acoustic:CHANGE_THIS_PASSWORD@localhost:5432/acoustic

# JWT Secrets (Generate random strings: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_ACCESS_SECRET=CHANGE_THIS_TO_RANDOM_STRING
JWT_REFRESH_SECRET=CHANGE_THIS_TO_RANDOM_STRING

# Node Environment
NODE_ENV=production

# Backend
PORT=3001
CORS_ORIGIN=https://news.acoustic.uz,https://admins.acoustic.uz
